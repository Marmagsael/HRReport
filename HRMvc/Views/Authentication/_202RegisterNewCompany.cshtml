@{
    ViewData["Title"] = "_202RegisterNewCompany";
    Layout = "~/Views/Shared/Main/_01MyProfileLayout.cshtml";
}
<div id="_202RegisterNewCompany">
    <div class="page-header">
        <h1 class="page-title">Register a Company</h1>
    </div>

    <div class="page-body ">
        <form>
            @*SAVE BUTTON*@
            <div class="form-section-action">
                <input type="submit" value="Save" class="btn b-btn-primary" />
            </div>


            @*--- COMPANY NAME ---*@
            <div class="form-group d-md-flex ">
                <label class="control-label">Company Name</label>
                <div class="w-100">
                    <input class="form-control" />
                    <span class="text-danger err-input-msg"></span>
                </div>

            </div>

            @*--- COMPANY SHORT NAME ---*@
            <div class="form-group d-md-flex ">
                <label class="control-label">Short Name</label>
                <div class="w-100">
                    <input class="form-control b-w-50" />
                    <span class="text-danger err-input-msg"></span>
                </div>
            </div>

            <div class="" style="padding-left:10rem; margin-top:24px; padding-bottom:24px;">
                <hr class="divider-horizontal" />
            </div>
            @*--- CURRENCY ---*@
            <div class="form-group d-md-flex ">
                <label class="control-label">Currency</label>
                <div class="w-100">
                    <select class="form-select b-w-50" id="listCurrency">
                        <option selected class="bg-light text-muted " disabled value="-1">Select currency</option>
                    </select>
                    <span class="text-danger err-input-msg"></span>
                </div>
            </div>

            <div class="captioned-container" style="margin-top:4rem; margin-bottom:24px;">
                <h3 class="body-text-md">Addrress</h3>

                @*--- STREET ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Street</label>
                    <div class="w-100">
                        <input class="form-control" />
                        <span class="text-danger err-input-msg"></span>
                    </div>
                </div>

                @*--- VILLAGE ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Village</label>
                    <div class="w-100">
                        <input class="form-control" />
                        <span class="text-danger err-input-msg"></span>
                    </div>
                </div>

                @*--- BARANGAY ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Barangay</label>
                    <div class="w-100">
                        <input class="form-control" />
                        <span class="text-danger err-input-msg"></span>
                    </div>
                </div>


                @*--- COUNTRY ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Country</label>
                    <div class="w-100">
                        <select class="form-select b-w-50" id="lstCountry" data-countryCode="">
                            <option selected class="bg-light text-muted " disabled value="-1">Select country </option>
                        </select>
                        <span class="text-danger err-input-msg"></span>
                    </div>

                </div>

                @*--- REGION ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Region</label>
                    <div class="w-100">
                        <select class="form-select b-w-50" id="lstRegion">
                            <option selected class="bg-light text-muted " disabled value="-1">Select region</option>
                        </select>
                        <span class="text-danger err-input-msg"></span>
                    </div>

                </div>

                @*--- CITY ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">City</label>
                    <div class="w-100">
                        <select class="form-select b-w-50" id="lstCity">
                            <option selected class="bg-light text-muted " disabled value="-1">Select city</option>
                        </select>
                        <span class="text-danger err-input-msg"></span>
                    </div>

                </div>

                @*--- ZIP CODE ---*@
                <div class="form-group d-md-flex ">
                    <label class="control-label">Postal</label>
                    <div class="w-100">
                        <input class="form-control b-w-50" id="ZipCode" />
                        <span class="text-danger err-input-msg"></span>
                    </div>
                </div>
            </div>
        </form>

        <div class="" style="padding-left:10rem; padding-bottom:24px;">
            <hr class="divider-horizontal" />
        </div>

        @*--- COMPLETE ADDRESS ---*@
        <div class="form-group d-md-flex ">
            <label class="control-label">Complete Address</label>
            <div class="w-100">
                <textarea class="form-control" rows="4" disabled> </textarea>
            </div>
        </div>
    </div>
</div>
