@model HRMvc.Models.Pis._EmpmasMasterUiModel


<form>
    @*SAVE BUTTON*@
    <div class="form-section-action">
        <input type="submit" value="Save" class="btn b-btn-primary" />
    </div>

    @*IMAGE*@
    <div class="form-img-container"><i class="fa-solid fa-user-tie"></i></div>

    @*LAST NAME*@
    <div class="form-group d-md-flex">
        <label class="control-label">Lastname</label>
        <input class="form-control"
               name="lastnm"
               data-ctl="this.rec.empmas.EmpLastNm"
               v-model="rec.empmas.empLastNm"
               @@input="ChangeValue" />
    </div>

    @*FIRST NAME*@
    <div class="form-group d-md-flex">
        <label class="control-label">EmpFirstNm</label>
        <input type="text" id="fname"
               class="form-control"
               v-model="rec.empmas.empFirstNm" />

    </div>

    @*MIDDLE NAME*@
    <div class="form-group d-md-flex">
        <label class="control-label">EmpMidNm</label>
        @*<input asp-for="empmas.EmpMidNm" class="form-control" />*@
        <input class="form-control"
               type="text" data-val="true"
               data-val-length="This field must not exceed 15 characters."
               data-val-length-max="15"
               id="empmas_EmpMidNm"
               maxlength="15"
               name="empmas.EmpMidNm"
               control-id="ControlID-4"
               v-model="rec.empmas.empMidNm">
    </div>

    @*SUFFIX*@
    <div class="form-group d-md-flex">
        <label class="control-label">Suffix</label>
        @*<input asp-for="empmas.Suffix" class="form-control b-w-50" />*@
        <input class="form-control b-w-50"
               type="text" id="empmas_Suffix"
               name="empmas.Suffix"
               control-id="ControlID-5"
               v-model="rec.empmas.suffix">
    </div>

    @*ALIAS*@
    <div class="form-group d-md-flex">
        <label class="control-label">EmpAlias</label>
        @*<input asp-for="empmas.EmpAlias" class="form-control b-w-50" />*@
        <input class="form-control b-w-50"
               type="text" data-val="true"
               data-val-length="This field must not exceed 15 characters."
               data-val-length-max="15" id="empmas_EmpAlias"
               maxlength="15"
               name="empmas.EmpAlias"
               control-id="ControlID-6"
               v-model="rec.empmas.empAlias">

    </div>



</form>

