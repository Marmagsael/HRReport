@model HRMvc.Models.Pis._EmpmasMasterUiModel

<section>
    <h2 class="form-section-caption mt-0">Address</h2>
    <form asp-action="">
        <div class="form-section-action">
            <input type="submit" value="Save" class="btn b-btn-primary" />
        </div>
        @*************************************************@
        @*-------- Present ------------------------------*@
        @*************************************************@
        <div class="captioned-container ">
            <h3 class="body-text-md">Present</h3>
            @*PRESENT ADDRESS*@
            <div class="form-group d-md-flex mb-2">
                <label asp-for="empmasAddress!.PresAdd" class="control-label"></label>
                <textarea class="form-control" 
                    rows="3" 
                    cols="50" 
                    data-val="true" 
                    data-val-length="This field must not exceed 200 characters." 
                    data-val-length-max="200" id="empmasAddress_PresAdd"
                    maxlength="200" name="empmasAddress.PresAdd">
                </textarea>
            </div>


            @*PRESENT CITY*@
            <div class="form-group d-md-flex mb-2">
                <label asp-for="empmasAddress!.PresAddCity" class="control-label"></label>
                <select class="form-select" 
                    data-val="true" 
                    data-val-length="This field must not exceed 45 characters." 
                    data-val-length-max="45" id="empmasAddress_PresAddCity" 
                    name="empmasAddress.PresAddCity">
                        <option>Select a city</option>
                        <option value="1">City 1</option>
                        <option value="2">City 2</option>
                </select>
            </div>

            @*PRESENT TELNO*@
            <div class="form-group d-md-flex mb-md-0 mb-2">
                <label asp-for="empmasAddress!.PresAddTelNo" class="control-label"></label>
                <input class="form-control" 
                    type="text" data-val="true" 
                    data-val-length="This field must not exceed 45 characters." 
                    data-val-length-max="45" 
                    id="empmasAddress_PresAddTelNo" 
                    maxlength="45" 
                    name="empmasAddress.PresAddTelNo">
            </div>
        </div>

        @*************************************************@
        @*-------- Provincial ---------------------------*@
        @*************************************************@

        <div class=" captioned-container ">
            <h3 class="body-text-md">Provincial</h3>

            @*PROVINCIAL ADDRESS*@
            <div class="form-group d-md-flex mb-2">
                <label asp-for="empmasAddress!.ProvAdd" class="control-label"></label>
                <textarea class="form-control" 
                    rows="3" 
                    cols="50" 
                    data-val="true" 
                    data-val-length="This field must not exceed 200 characters." 
                    data-val-length-max="200" 
                    id="empmasAddress_ProvAdd" 
                    maxlength="200" 
                    name="empmasAddress.ProvAdd">
                </textarea>
            </div>


            @*PROVINCIAL CITY*@
            <div class="form-group d-md-flex mb-2">
                <label asp-for="empmasAddress!.ProvAddCity" class="control-label"></label>
                <select class="form-select" 
                    data-val="true" 
                    data-val-length="This field must not exceed 45 characters." 
                    data-val-length-max="45" 
                    id="empmasAddress_ProvAddCity" 
                    name="empmasAddress.ProvAddCity">
                        <option>Select a city</option>
                        <option value="1">City 1</option>
                        <option value="2">City 2</option>
                </select>
            </div>

            @*PROVINCIAL TELNO*@
            <div class="form-group d-md-flex mb-md-0 mb-2">
                <label asp-for="empmasAddress!.ProvAddTelNo" class="control-label"></label>
                <input class="form-control" 
                    type="text" 
                    data-val="true" 
                    data-val-length="This field must not exceed 45 characters." 
                    data-val-length-max="45" 
                    id="empmasAddress_ProvAddTelNo"
                    maxlength="45" 
                    name="empmasAddress.ProvAddTelNo">
            </div>
        </div>

    </form>
</section>



