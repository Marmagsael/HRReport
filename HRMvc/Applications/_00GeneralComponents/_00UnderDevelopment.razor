<div style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 95vh;
    padding: 2rem;
    text-align: center;
    background-color: #f9f9f9;
">
    <img src="images/under-construction.png" alt="Under Development" style="width: 250px; margin-bottom: 1.5rem;" />


    <h1 style="font-size: 2.5rem; color: #2c3e50; margin-bottom: 1rem;">
        @Module - Coming Soon
    </h1>

    <p style="font-size: 1.2rem; color: #555; max-width: 500px; margin-bottom: 1rem;">
        This module is currently under development as part of ongoing system improvements.
        Please check back soon for availability.
    </p>

    <p style="font-size: 1rem; color: #888;">
        Thank you for your patience.<br />
    </p>

    

</div>

@code {
    [Parameter]
    public string? Module {get;set;}
}