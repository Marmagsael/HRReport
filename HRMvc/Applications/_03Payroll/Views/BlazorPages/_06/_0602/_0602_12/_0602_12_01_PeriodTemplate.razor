@using HRApiLibrary.Models._20_Pay

<style>
    .prd-text1 {
        color: #0d6efd;
        padding-top: 4px; 
        font-size: smaller;
        width: 25px;
    }
</style>

<div class="d-flex flex-wrap w-100 py-1 ">
    @* --- Period 1 -------------------------------------------------------*@
    <div class="d-flex gap-1">
        <div class="p-0">
            <RadzenCheckBox @bind-Value="FeG!.P1B" TValue="bool"
                            class="p-0 form-check-input me-1" @onchange="() => ChildAction.InvokeAsync(FeG)"/>
        </div>
        <div  class="prd-text1" > P1 </div>
    </div>
    
    @* --- Period 2 -------------------------------------------------------*@
    <div class="d-flex gap-1">
        <div class="p-0">
            <RadzenCheckBox @bind-Value="FeG!.P2B" TValue="bool"
                            class="p-0 form-check-input me-1" @onchange="() => ChildAction.InvokeAsync(FeG)"/>
        </div>
        <div  class="prd-text1" > P2 </div>
    </div>
    
    @* --- Period 3 -------------------------------------------------------*@
    <div class="d-flex gap-1">
        <div class="p-0">
            <RadzenCheckBox @bind-Value="FeG!.P3B" TValue="bool"
                            class="p-0 form-check-input me-1" @onchange="() => ChildAction.InvokeAsync(FeG)"/>
        </div>
        <div  class="prd-text1" > P3 </div>
    </div>
    
    @* --- Period 4 -------------------------------------------------------*@
    <div class="d-flex gap-1">
        <div class="p-0">
            <RadzenCheckBox @bind-Value="FeG!.P4B" TValue="bool"
                            class="p-0 form-check-input me-1" @onchange="() => ChildAction.InvokeAsync(FeG)"/>
        </div>
        <div  class="prd-text1" > P4 </div>
    </div>
    
    @* --- Period 5 -------------------------------------------------------*@
    <div class="d-flex gap-1">
        <div class="p-0">
            <RadzenCheckBox @bind-Value="FeG!.P5B" TValue="bool"
                            class="p-0 form-check-input me-1" @onchange="() => ChildAction.InvokeAsync(FeG)"/>
        </div>
        <div  class="prd-text1" > P5 </div>
    </div>
    
   

</div>

@code {

    [Parameter] public Fixedearnings_grpModel?                  FeG                 { get; set; }
    [Parameter] public EventCallback<Fixedearnings_grpModel>    ChildAction         { get; set; }
    
}